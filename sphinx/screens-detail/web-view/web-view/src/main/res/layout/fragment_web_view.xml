<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_web_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_detail_screen"
    tools:context=".ui.WebViewFragment">

    <include
        android:id="@+id/include_web_view_header"
        layout="@layout/layout_detail_screen_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_header_height"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_web_view_header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_boost_button_container"
        android:layout_width="@dimen/custom_boost_width"
        android:layout_height="@dimen/custom_boost_height"
        android:background="@drawable/button_background_white_rad_48"
        android:backgroundTint="@color/primaryGreen"
        android:layout_margin="@dimen/default_layout_margin"
        app:layout_constraintTop_toBottomOf="@+id/include_web_view_header"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_custom_boost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:layout_marginStart="@dimen/default_half_layout_margin"
            android:layout_marginEnd="@dimen/default_small_layout_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_view_feed_boost_button"
            android:textSize="@dimen/custom_boost_text_size"
            android:inputType="number"
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_feed_boost_button"
            android:layout_width="@dimen/small_control_button_xy"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/custom_boost_margin"
            android:padding="@dimen/custom_boost_button_padding"
            android:background="@drawable/button_background_white_rad_48"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_boost"
            android:tint="@color/primaryGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/include_layout_boost_fireworks"
        layout="@layout/layout_boost_fireworks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progress_bar_loading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/body"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_web_view_header">

        <ProgressBar
            android:layout_width="@dimen/loading_progress_bar_xy"
            android:layout_height="@dimen/loading_progress_bar_xy"
            style="?android:attr/progressBarStyle"
            android:indeterminateTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:indeterminate="true"
            android:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
