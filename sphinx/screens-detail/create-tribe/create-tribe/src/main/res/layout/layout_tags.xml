<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/default_layout_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckedTextView
        android:id="@+id/text_view_tag_item"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_tribe"
        android:paddingStart="@dimen/default_layout_margin"
        android:drawablePadding="@dimen/default_layout_margin"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/add_buttons_text_size"
        android:fontFamily="@font/roboto_regular"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Bitcoin"
        />
</androidx.constraintlayout.widget.ConstraintLayout>