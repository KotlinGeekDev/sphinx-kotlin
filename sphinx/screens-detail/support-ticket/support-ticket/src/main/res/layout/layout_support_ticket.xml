<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_support_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/support_ticket_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_message_text"
        android:backgroundTint="@color/lightDivider"
        android:maxLines="5"
        android:padding="@dimen/default_layout_margin"
        android:layout_margin="@dimen/default_layout_margin"
        android:textColor="@color/text"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/describe_your_problem_here"
        tools:text="I have been having issues with this and that and thought I should let the devs know"
        />

    <include
        android:id="@+id/layout_button_send_message"
        layout="@layout/layout_button_send_message"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/default_layout_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>