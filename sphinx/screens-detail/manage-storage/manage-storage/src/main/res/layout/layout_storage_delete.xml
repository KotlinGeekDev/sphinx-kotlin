<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerBG">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_storage_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_detail_screen_close"
            android:layout_width="@dimen/default_header_navigation_xy"
            android:layout_height="@dimen/default_header_navigation_xy"
            android:fontFamily="@font/material_icons_regular"
            android:gravity="center"
            android:text="@string/material_icon_name_nav_back"
            android:textColor="@color/placeholderText"
            android:textSize="@dimen/default_text_size_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_storage_delete_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_elevation"
            android:fontFamily="@font/roboto_medium"
            android:maxLines="1"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/pin_help_text_view_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_detail_screen_close"
            app:layout_constraintStart_toEndOf="@+id/text_view_detail_screen_close"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Chats"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_manage_storage_total_delete_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_header_headline_margin_horizontal"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/default_text_size_small_headline"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_storage_delete_header"
            app:layout_constraintEnd_toStartOf="@+id/button_profile_right_arrow_total_delete"
            tools:text="12.37 GB" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_profile_right_arrow_total_delete"
            android:layout_width="@dimen/default_radius"
            android:layout_height="@dimen/default_radius"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ic_delete"
            android:backgroundTint="@color/secondaryText"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_manage_storage_total_delete_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_manage_storage_total_delete_number" />

        <View
            android:id="@+id/view_storage_separator_divider_delete"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:background="@color/black"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_detail_screen_close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_storage_element_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_storage_header_container"
        tools:listitem="@layout/storage_element_list_item_holder" />



</androidx.constraintlayout.widget.ConstraintLayout>

