<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_new_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_detail_screen"
    tools:context=".ui.NewContactFragment">

    <include
        android:id="@+id/layout_new_contact_header"
        layout="@layout/layout_new_contact_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_header_height"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_nickname_content"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="@dimen/field_label_margin"
        android:layout_marginEnd="@dimen/field_label_margin"
        app:layout_constraintTop_toBottomOf="@+id/layout_new_contact_header">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_contact_nickname_label_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_contact_nickname_label"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/label_size"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/new_contact_nickname_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/roboto_regular"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/new_contact_nickname_label_field"
            app:layout_constraintStart_toStartOf="@+id/new_contact_nickname_label_field"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/new_contact_field_size"
            android:inputType="textVisiblePassword"
            android:layout_marginLeft="@dimen/new_contact_field_neg_margin"
            android:singleLine="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint_new_contact_nickname_bottom_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/new_contact_nickname_label_field" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_address_content"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="@dimen/field_label_margin"
        android:layout_marginEnd="@dimen/field_label_margin"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_nickname_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_contact_address_label_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_contact_address_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/label_size"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/new_contact_address_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/roboto_regular"
            app:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/new_contact_address_label_field"
            app:layout_constraintStart_toStartOf="@+id/new_contact_address_label_field"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/new_contact_field_size"
            android:inputType="textVisiblePassword"
            android:layout_marginLeft="@dimen/new_contact_field_neg_margin"
            android:singleLine="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint_new_contact_address_bottom_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/new_contact_address_label_field" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_route_hint_content"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="@dimen/field_label_margin"
        android:layout_marginEnd="@dimen/field_label_margin"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_address_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_contact_route_hint_label_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_contact_route_hint_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/label_size"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/new_contact_route_hint_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryText"
            app:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintTop_toBottomOf="@+id/new_contact_route_hint_label_field"
            app:layout_constraintStart_toStartOf="@+id/new_contact_route_hint_label_field"
            app:layout_constraintBottom_toBottomOf="parent"
            android:inputType="textVisiblePassword"
            android:textSize="@dimen/new_contact_field_size"
            android:layout_marginLeft="@dimen/new_contact_field_neg_margin"
            android:singleLine="true" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint_new_contact_route_hint_bottom_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondaryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/new_contact_route_hint_label_field" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_pin_content"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginStart="@dimen/field_label_margin"
        android:layout_marginEnd="@dimen/field_label_margin"
        app:layout_constraintTop_toBottomOf="@+id/layout_constraint_route_hint_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_contact_pin_label_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_contact_pin_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/label_size"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/new_contact_pin_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_contact_pin_std_private_label"
            app:layout_constraintTop_toBottomOf="@+id/new_contact_pin_label_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/secondaryText"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/pin_label_size"
            android:singleLine="true" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_save_content"
        android:layout_width="@dimen/save_to_contacts_button_width"
        android:layout_height="@dimen/save_contact_button_height"
        android:layout_marginBottom="@dimen/save_to_contacts_button_bottom_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_already_on_sphinx"
            style="@style/SaveToContactsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/save_to_contacts_button"
            android:textSize="@dimen/save_to_contacts_buttons_text_size"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background_white_rad_48"
            android:backgroundTint="@color/primaryBlue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>