<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--
         Set 1: Menu Closed
   -->

    <ConstraintSet android:id="@+id/motion_scene_known_badges_closed">

        <Constraint android:id="@+id/view_known_badges_lock">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@+id/include_layout_known_badges_details"
            motion:layout_editor_absoluteY="107dp"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="0dp"
            android:layout_width="match_parent">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="parent" />
            <PropertySet android:visibility="invisible" />
        </Constraint>

    </ConstraintSet>

    <!--
           Set 2: Nav Drawer Open
    -->

    <ConstraintSet
        android:id="@+id/motion_scene_known_badges_open"
        app:deriveConstraintsFrom="@+id/motion_scene_known_badges_closed">

        <Constraint android:id="@+id/view_known_badges_lock">
            <PropertySet
                android:alpha="@dimen/options_menu_input_lock_alpha"
                android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@+id/include_layout_known_badges_details">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent" />
            <PropertySet android:visibility="visible" />
        </Constraint>

    </ConstraintSet>

    <Transition
        android:id="@+id/transition_known_badges_closed_to_open"
        app:constraintSetEnd="@+id/motion_scene_known_badges_open"
        app:constraintSetStart="@+id/motion_scene_known_badges_closed"
        app:duration="300"
        app:motionInterpolator="cubic(0.41,0.39,0,1)">
    </Transition>


</MotionScene>