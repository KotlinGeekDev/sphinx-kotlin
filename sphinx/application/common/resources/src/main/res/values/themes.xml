<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppLaunchTheme" parent="AppTheme.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash_combined</item>
    </style>

    <style name="AppPostLaunchTheme" parent="AppTheme.Fullscreen">
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <!-- Button Styles -->
    <style name="RoundedBlueButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">4dp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Alert styles -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/alert_dark_grey</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/badgeRed</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryGreen</item>
    </style>

</resources>
