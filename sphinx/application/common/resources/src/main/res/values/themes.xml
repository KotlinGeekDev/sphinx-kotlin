<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar" >
        <item name="chipStyle">@style/AppTheme.Chip</item>
    </style>

    <style name="AppTheme.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/background_chip</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="textStartPadding">@dimen/default_chip_text_padding</item>
        <item name="textEndPadding">@dimen/default_chip_text_padding</item>
        <item name="android:textSize">@dimen/default_chip_text_size</item>
        <item name="android:textColor">@color/textInverted</item>
        <item name="elevation">@dimen/default_chip_elevation</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppLaunchTheme" parent="AppTheme.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash_combined</item>
    </style>

    <style name="AppPostLaunchTheme" parent="AppTheme.Fullscreen">
        <item name="android:colorBackground">@android:color/black</item>
    </style>


    <!-- Button Styles -->
    <style name="RoundedBlueButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">4dp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">8dp</item>
    </style>

</resources>
