<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppLaunchTheme" parent="AppTheme.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash_combined</item>
    </style>

    <style name="AppPostLaunchTheme" parent="AppTheme.Fullscreen">
        <item name="android:colorBackground">@android:color/holo_red_dark</item>
    </style>


    <!-- Button Styles -->

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">8dp</item>
    </style>

</resources>
