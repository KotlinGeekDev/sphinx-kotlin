<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_dashboard_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/default_bottom_bar_height"
    android:background="@color/headerBGSemiTransparent"
    android:elevation="@dimen/default_elevation">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nav_bar_button_payment_receive"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_bottom_bar_height"
        android:padding="@dimen/nav_bar_button_padding"
        android:src="@drawable/ic_request"
        android:tint="@color/whiteSeventyPercentOpacity"
        app:layout_constraintEnd_toStartOf="@+id/nav_bar_button_transactions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nav_bar_button_transactions"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_bottom_bar_height"
        android:padding="19dp"
        android:src="@drawable/ic_transaction"
        android:tint="@color/whiteSeventyPercentOpacity"
        app:layout_constraintEnd_toStartOf="@+id/nav_bar_button_scanner"
        app:layout_constraintStart_toEndOf="@+id/nav_bar_button_payment_receive"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nav_bar_button_scanner"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_bottom_bar_height"
        android:padding="18dp"
        android:src="@drawable/ic_scan"
        android:tint="@color/whiteSeventyPercentOpacity"
        app:layout_constraintEnd_toStartOf="@+id/nav_bar_button_payment_send"
        app:layout_constraintStart_toEndOf="@+id/nav_bar_button_transactions"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/nav_bar_button_payment_send"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_bottom_bar_height"
        android:padding="@dimen/nav_bar_button_padding"
        android:src="@drawable/ic_send"
        android:tint="@color/whiteSeventyPercentOpacity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nav_bar_button_scanner"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
