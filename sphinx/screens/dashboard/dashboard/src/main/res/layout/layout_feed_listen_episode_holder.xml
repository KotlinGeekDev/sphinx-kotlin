<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/headerBG"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_layout_margin"
        android:elevation="@dimen/default_elevation"
        app:cardCornerRadius="@dimen/default_radius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_podcast_image"
            android:layout_width="@dimen/default_feed_image_xy"
            android:layout_height="@dimen/default_feed_image_xy"
            app:srcCompat="@drawable/paid_image_blurred_placeholder"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_layout_margin"
        android:fontFamily="@font/material_icons_regular"
        android:text="@string/material_icon_name_play_outline"
        android:textColor="@color/text"
        android:textSize="@dimen/default_feed_image_play_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_image_wrapper"
        app:layout_constraintEnd_toEndOf="@+id/card_view_image_wrapper"
        android:elevation="@dimen/default_feed_play_elevation"
        />

    <TextView
        android:id="@+id/text_view_listen_podcast_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textInverted"
        android:textSize="@dimen/default_text_size_headline"
        android:lines="1"
        app:layout_constraintTop_toBottomOf="@+id/card_view_image_wrapper"
        app:layout_constraintStart_toStartOf="@+id/card_view_image_wrapper"
        app:layout_constraintEnd_toEndOf="@+id/card_view_image_wrapper"
        tools:text="episode with audio to play"
        />

    <TextView
        android:id="@+id/text_view_listen_podcast_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_layout_margin"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="@dimen/default_text_size_headline"
        android:lines="2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_listen_podcast_name"
        app:layout_constraintStart_toStartOf="@+id/card_view_image_wrapper"
        app:layout_constraintEnd_toEndOf="@+id/card_view_image_wrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="episode that a user can play now and so and so forth"
        />
</androidx.constraintlayout.widget.ConstraintLayout>