<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DashboardTab"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tab Title"/>

    <View
        android:id="@+id/view_unseen_messages_dot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/default_half_layout_margin"
        app:layout_constraintStart_toEndOf="@+id/text_view_tab_title"
        app:layout_constraintBottom_toTopOf="@+id/text_view_tab_title"
        android:background="@drawable/dashboard_tab_dot"/>

</androidx.constraintlayout.widget.ConstraintLayout>