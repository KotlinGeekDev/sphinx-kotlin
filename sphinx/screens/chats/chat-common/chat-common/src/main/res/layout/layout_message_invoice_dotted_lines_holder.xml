<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_invoice_payment_left_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="@dimen/invoice_line_width"
            android:layout_height="0dp"
            android:background="@drawable/invoice_vertical_dotted_line"
            android:layout_marginStart="@dimen/invoice_line_left_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_invoice_payment_left_dot"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_invoice_payment_left_dot"
            android:layout_width="@dimen/invoice_dot_xy"
            android:layout_height="@dimen/invoice_dot_xy"
            android:background="@drawable/invoice_payment_circle"
            android:backgroundTint="@color/secondaryText"
            android:layout_marginTop="@dimen/invoice_dot_top_margin"
            android:layout_marginStart="@dimen/invoice_dot_left_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_invoice_payment_right_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="@dimen/invoice_line_width"
            android:layout_height="0dp"
            android:background="@drawable/invoice_vertical_dotted_line"
            android:layout_marginEnd="@dimen/invoice_line_right_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_invoice_payment_right_dot"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/view_invoice_payment_right_dot"
            android:layout_width="@dimen/invoice_dot_xy"
            android:layout_height="@dimen/invoice_dot_xy"
            android:background="@drawable/invoice_payment_circle"
            android:backgroundTint="@color/secondaryText"
            android:layout_marginTop="@dimen/invoice_dot_top_margin"
            android:layout_marginEnd="@dimen/invoice_dot_right_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_invoice_left_line"
        android:layout_width="@dimen/invoice_line_width"
        android:layout_height="0dp"
        android:background="@drawable/invoice_vertical_dotted_line"
        android:layout_marginStart="@dimen/invoice_line_left_margin"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_invoice_right_line"
        android:layout_width="@dimen/invoice_line_width"
        android:layout_height="0dp"
        android:background="@drawable/invoice_vertical_dotted_line"
        android:layout_marginEnd="@dimen/invoice_line_right_margin"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view_invoice_bottom_left_line"
        android:layout_width="@dimen/invoice_line_width"
        android:layout_height="@dimen/invoice_bottom_line_height"
        android:background="@drawable/invoice_vertical_dotted_line"
        android:layout_marginStart="@dimen/invoice_line_left_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_invoice_bottom_right_line"
        android:layout_width="@dimen/invoice_line_width"
        android:layout_height="@dimen/invoice_bottom_line_height"
        android:background="@drawable/invoice_vertical_dotted_line"
        android:layout_marginEnd="@dimen/invoice_line_right_margin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>